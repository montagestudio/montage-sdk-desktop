{
  "name": "montage-sdk-desktop",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/montagestudio/montage-sdk-desktop.git"
  },
  "author": "Harold Thetiot",
  "license": "Kaazing Corp",
  "bugs": {
    "url": "https://github.com/montagestudio/montage-sdk-desktop/issues"
  },
  "homepage": "https://github.com/montagestudio/montage-sdk-desktop#README.md",
  "private": true,
  "engines": {
    "node": "4.5",
    "npm": "2.15.9"
  },
  "main": "app/index.html",
  "appUrl": "https://montagejs.github.io/popcorn/",
  "appScheme": "montage",
  "version": "0.0.1",
  "window": {
    "title": "Montage PopCorn",
    "description": "A re-usable montage wrapper for native desktop app.",
    "icon": "app/img/icon.png",
    "toolbar": false,
    "frame": true,
    "width": 1024,
    "height": 768,
    "min_width": 320,
    "min_height": 640,
    "resizable": true,
    "position": "center"
  },
  "scripts": {
    "start": "nw ."
  },
  "chromium-args": "--enable-usermedia-screen-capturing --enable-webrtc-hw-h264-encoding --enable-webvr --enable-accelerated-vpx-decode --enable-win7-webrtc-hw-h264-decoding --aec-refined-adaptive-filter --agc-startup-min-volume %u",
  "user-agent": "%name Desktop %ver - %osinfo",
  "webkit": {
    "plugin": false,
    "java": false,
    "page-cache": false
  },
  "devDependencies": {
    "grunt": "^1.0.1",
    "grunt-appdmg": "^0.4.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-debian-package": "^0.1.13",
    "grunt-nw-builder": "^3.1.0"
  },
  "dependencies": {
    "winreg": "^1.2.2"
  }
}
